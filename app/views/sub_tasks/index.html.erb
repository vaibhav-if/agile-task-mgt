<p id="notice"><%= notice %></p>

<h1>Sub Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Status</th>
      <th>Task</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sub_tasks.each do |sub_task| %>
      <tr>
        <td><%= sub_task.title %></td>
        <td><%= sub_task.status %></td>
        <td><%= sub_task.task.title %></td>
        <td><%= link_to 'Edit Sub-Task', edit_task_sub_task_path(@task, sub_task) %></td>
        <td><%= link_to 'Delete Sub-Task', [@task, sub_task], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sub-Task', new_task_sub_task_path(@task) %>
<%= link_to 'Back', project_tasks_path(@task) %>