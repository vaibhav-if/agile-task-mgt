<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Decription</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Story point</th>
      <th>Priority</th>
      <th>Due date</th>
      <th>Status</th>
      <th>Project</th>
      <th>User</th>
      <th>Phase</th>
      <th>Task type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.decription %></td>
        <td><%= task.start_date %></td>
        <td><%= task.end_date %></td>
        <td><%= task.story_point %></td>
        <td><%= task.priority %></td>
        <td><%= task.due_date %></td>
        <td><%= task.status %></td>
        <td><%= task.project.title %></td>
        <td><%= task.user.email %></td>
        <td><%= task.phase.title %></td>
        <td><%= task.task_type %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

